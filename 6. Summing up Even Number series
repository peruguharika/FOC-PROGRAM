#include <stdio.h>

int main() {
    int n, i, sum = 0;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter the elements: ");
    for (i = 1; i <= n; i++) {
        int num;
        scanf("%d", &num);

        if (num % 2 == 0) { // Check if the number is even
            sum += num; // Add the number to the sum
        }
    }

    printf("The sum of even numbers in the series is: %d", sum);

    return 0;
}
